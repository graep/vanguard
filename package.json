{
  "name": "vanguard-fleet",
  "version": "1.0.0",
  "author": "Vanguard Fleet Management",
  "homepage": "https://vanguard-fleet.com",
  "description": "Vanguard Fleet & Condition Tracking Application",
  "keywords": [
    "fleet",
    "inspection",
    "vehicle",
    "management",
    "ionic",
    "angular"
  ],
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "node scripts/build-production.js",
    "build:dev": "ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadlessCI --code-coverage",
    "test:coverage": "ng test --watch=false --browsers=ChromeHeadlessCI --code-coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "serve:prod": "npx http-server www -p 8080",
    "deploy": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:all": "firebase deploy",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "update:safe": "npm update",
    "monitor:deps": "node scripts/dependency-monitor.js",
    "security:check": "npm audit && npm outdated",
    "setup:env": "node setup-env.js",
    "docker:build": "docker build -t vanguard-app .",
    "docker:run": "docker run -p 8080:80 vanguard-app",
    "health:check": "curl -f http://localhost:8080/health || exit 1",
    "precommit": "npm run lint && npm run test:ci",
    "validate:env": "node scripts/validate-env.js",
    "prebuild:prod": "npm run validate:env",
    "postbuild": "npm run health:check"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/fire": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@angular/service-worker": "^19.2.15",
    "@capacitor-community/camera-preview": "^7.0.1",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "7.0.1",
    "@capacitor/camera": "^7.0.1",
    "@capacitor/core": "^7.4.3",
    "@capacitor/geolocation": "^7.1.5",
    "@capacitor/haptics": "7.0.1",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/keyboard": "7.0.1",
    "@capacitor/screen-orientation": "^7.0.2",
    "@capacitor/status-bar": "7.0.1",
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "@ionic/angular": "^8.0.0",
    "@ionic/pwa-elements": "^3.3.0",
    "date-fns": "^4.1.0",
    "firebase": "^11.9.0",
    "firebase-admin": "^13.4.0",
    "glob": "^11.0.3",
    "ionicons": "^7.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular-eslint/builder": "^19.0.0",
    "@angular-eslint/eslint-plugin": "^19.0.0",
    "@angular-eslint/eslint-plugin-template": "^19.0.0",
    "@angular-eslint/schematics": "^19.0.0",
    "@angular-eslint/template-parser": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@angular/language-service": "^19.0.0",
    "@capacitor/cli": "7.2.0",
    "@ionic/angular-toolkit": "^12.0.0",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "jasmine-core": "~5.1.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "^5.4.3"
  }
}
